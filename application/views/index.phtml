		function validarVacios(){
			var x = $("#formaAltaPlaza")[0].length ; 
			var vacios = 0;
			for (var i= 0 ; i < x-2 ; i++){

				if($("#formaAltaPlaza")[0][i].value.trim() == ""){
					vacios++;
				}

			}

			if (vacios > 0) {
				return false;
			}
			else {
				return true;
			}

		}
		
		function enviarAlta(){				
			var vacios = validarVacios();
			if(vacios === true) {
				var formaPlaza = new FormData($('#formaAltaPlaza')[0]);
					//alert(formaPlaza.val);
					
					formaPlaza.append("c", 'Plazas');
					formaPlaza.append("a", 'insert');
					
					$.ajax({
						type: "POST",
						async:true,
						url:"index.php",		
						success:function(data){
							$("#dialog").dialog("close");
							$("#contenidos").html(data);							
						},
						error:function(request,status,error){
							$("#dialog").dialog("open");
							$("#dialog").html("hola");
						},
						data: formaPlaza,
						//cache:false, 
						contentType:false,
						processData:false
					}
					);

				}

				else {
					alert("Campos Vacios");
				}

			}

			
			
		</script>
		
